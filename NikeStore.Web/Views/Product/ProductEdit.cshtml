@using Microsoft.AspNetCore.Mvc.TagHelpers
@model NikeStore.Web.Models.Dto.ProductDto

<div class="row">
    <div class="col"></div>
    <div class="col">
        <form asp-action="ProductEdit" enctype="multipart/form-data">
            <input asp-for="ProductId" type="hidden"/>

            <h1 class="display-6 my-5">Add Product</h1>
            <div class="mb-4">
                <label class="form-label">Product Name</label>
                <input asp-for="Name" type="text" class="form-control" placeholder="Enter Product Name"/>
                <span asp-validation-for="Name" class="form-text text-danger"></span>
            </div>
            <div class="mb-4">
                <label class="form-label">Category</label>
                <select asp-for="CategoryName" class="form-select">
                    <option value="" selected="">Select a Category</option>
                    <option value="clothing">Clothing</option>
                    <option value="electronics">Electronics</option>
                    <option value="toys">Toys</option>
                    <option value="beauty">Beauty</option>
                    <option value="jewelry">Jewelry</option>
                    <option value="sports">Sports</option>
                    <option value="automotive">Automotive</option>
                    <option value="pets">Pets</option>
                    <option value="grocery">Grocery</option>
                    <option value="books">Books</option>
                    <option value="movies">Movies & Music</option>
                    <option value="baby">Baby</option>
                    <option value="furniture">Furniture</option>
                    <option value="garden">Garden</option>
                    <option value="travel">Travel</option>
                </select>
                <span asp-validation-for="CategoryName" class="form-text text-danger"></span>
            </div>
            <div class="mb-4">
                <label class="form-label">Price</label>
                <input asp-for="Price" type="text" class="form-control" placeholder="Enter Price"/>
                <span asp-validation-for="Price" class="form-text text-danger"></span>
            </div>
            <div class="mb-4">
                <label class="form-label">Image</label>
                <input asp-for="Image" type="file" class="form-control"/>
                <input asp-for="ImageUrl" hidden class="form-control"/>
                <input asp-for="ImageLocalPath" hidden class="form-control"/>
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div>
                <div class="col-2">
                    <img src="@Model.ImageUrl" class="w-100" alt=""/>
                </div>
            </div>
            <div class="mb-4">
                <label class="form-label">Description</label>
                <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Description" class="form-text text-danger"></span>
            </div>


            <div class="my-5">
                <button type="submit" class="btn btn-sm btn-success">Submit</button>
                <a asp-action="ProductIndex" type="button" class="btn btn-sm btn-danger">Back</a>
            </div>
        </form>
    </div>
    <div class="col"></div>
</div>


<form asp-action="ProductEdit" enctype="multipart/form-data">
    <br />
    <div class="container border p-3">
        <h1 class=" text-center">Edit Product</h1>
        <input hidden asp-for="ProductId" />
        <hr />
        <div class="row">
            <div class="col-10">
                <div class="row">
                    <div class="col-2">
                        <label class="control-label pt-2" style="font-size:20px;"> Name</label>
                    </div>
                    <div class="col-10 pb-3">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col-2">
                        <label class="control-label pt-2" style="font-size:20px;">Category Name</label>
                    </div>
                    <div class="col-10 pb-3">
                        <input asp-for="CategoryName" class="form-control" />
                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                    </div>
                    <div class="col-2">
                        <label class="control-label pt-2" style="font-size:20px;">Description</label>
                    </div>
                    <div class="col-10 pb-3">
                        <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="col-2">
                        <label class="control-label pt-2" style="font-size:20px;">Price</label>
                    </div>
                    <div class="col-10 pb-3">
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="col-2">
                        <label class="control-label pt-2" style="font-size:20px;">ImageUrl</label>
                    </div>
                    <div class="col-10 pb-3">
                        <input asp-for="Image" class="form-control" />
                        <input asp-for="ImageUrl" hidden class="form-control" />
                        <input asp-for="ImageLocalPath" hidden class="form-control" />
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>

                    <div class="col-5 offset-2">

                        <a asp-action="ProductIndex" class="btn-primary btn form-control ">Back to List</a>
                    </div>
                    <div class="col-5">
                        <input type="submit" value="Update" class="btn btn-success form-control" />
                    </div>

                </div>
            </div>

        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
